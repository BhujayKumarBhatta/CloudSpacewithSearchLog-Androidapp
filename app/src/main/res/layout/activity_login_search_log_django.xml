<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="activities.android.theopentutorials.com.cloudspace.LoginActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">
        <TextView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="Login ID"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="text"
            android:hint="your django user name"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:id="@+id/VwidDjangologinID"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="password"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:hint="minimum 8 characters"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:id="@+id/VwidDjangologinPwd"
            />

    </LinearLayout>

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="Login"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/VwidDjangologinButton"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Login for New Search or tap on Previous Searches listed below"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/VwidDjangologinMsg"/>

    <ListView
        android:id="@+id/vwid_prev_searh_id_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0">

    </ListView>

</LinearLayout>
