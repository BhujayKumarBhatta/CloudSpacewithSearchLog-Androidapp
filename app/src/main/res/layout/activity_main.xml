<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="activities.android.theopentutorials.com.cloudspace.MainActivity">


    <TableRow
        android:id="@+id/tableRow0"
        android:layout_height="200dp"
        android:layout_width="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/clouddc"
            android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/TextViewr0c1" android:text="Welcome to CloudSpace"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:textColor="#3F51B5"
        android:padding="20dip" android:gravity="center"/>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_height="110dp"
        android:layout_width="match_parent"
        android:layout_below="@id/tableRow0">

        <TextView
            android:id="@+id/TextViewr1c1" android:text="Hosted Application"
            android:textStyle="bold"
            android:layout_weight="1" android:background="#B2FF59"
            android:textColor="@color/colorDarkPink"
            android:padding="20dip" android:gravity="center"
            android:onClick="GoToHotestedApplication1"/>
        <TextView
            android:layout_width="8dp"/>

        <TextView
            android:id="@+id/TextViewr1c2" android:text="Server Log Search"
            android:textStyle="bold"
            android:layout_weight="1" android:background="#EEFF41"
            android:textColor="@color/colorDarkPink"
            android:padding="20dip" android:gravity="center"
            android:onClick="gotoDjangoLogin"
            />
        <TextView
            android:layout_width="8dp"/>

        <TextView
            android:id="@+id/TextViewr1c3" android:text="Data Backup"
            android:textStyle="bold"
            android:layout_weight="1" android:background="#FFCC80"
            android:textColor="@color/colorDarkPink"
            android:padding="20dip" android:gravity="center"
            android:onClick="gotoLogin"/>

    </TableRow>
    <TableRow
        android:id="@+id/tableRow2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/tableRow1">

        <TextView
            android:id="@+id/TextViewr2c1" android:text="Network n Locations"
            android:textStyle="bold"
            android:layout_weight="1" android:background="#E1BEE7"
            android:textColor="@color/colorDarkPink"
            android:padding="20dip" android:gravity="center"
            android:onClick="gotoLogin"/>
        <TextView
            android:layout_width="8dp"/>

        <TextView
            android:id="@+id/TextViewr2c2" android:text="End Point Services"
            android:textStyle="bold"
            android:layout_weight="1" android:background="#D1C4E9"
            android:textColor="@color/colorDarkPink"
            android:padding="20dip" android:gravity="center"
            android:onClick="gotoLogin"/>
        <TextView
            android:layout_width="8dp"/>

        <TextView
            android:id="@+id/TextViewr2c3" android:text="DCInfra DCIM"
            android:textStyle="bold"
            android:layout_weight="1" android:background="#E1BEE7"
            android:textColor="@color/colorDarkPink"
            android:padding="20dip" android:gravity="center"
            android:onClick="gotoDcimExpan"/>

    </TableRow>

    <TableRow
        android:id="@+id/tableRown"
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:layout_below="@id/tableRow2"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/TextViewSettings" android:text="Settings"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:textColor="@color/colorWhite"
            android:padding="20dip" android:gravity="center"
            android:onClick="TriggerSettings"/>
    </TableRow>
</RelativeLayout>
