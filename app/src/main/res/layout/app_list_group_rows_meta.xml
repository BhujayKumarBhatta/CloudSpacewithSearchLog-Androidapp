<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorIndigo"
    android:descendantFocusability="blocksDescendants"
    android:clickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    >


    <TextView

        android:id="@+id/txtvWSubAppName"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="top"
        android:text=" Sub Application Name"
        android:textSize="22dp"
        android:textColor="@color/colorBlack"
        android:background="@color/colorIndigo"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txtvWSAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text="Parent App"
        android:textSize="15dp"
        android:textColor="@color/colorDarkViolet"
        android:background="@color/colorIndigo"
        android:textStyle="bold"
        android:layout_below="@+id/txtvWSubAppName"
        />
    <TextView
        android:id="@+id/txtVwAppid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text="app id "
        android:textSize="15dp"
        android:textColor="@color/colorDarkViolet"
        android:background="@color/colorIndigo"
        android:textStyle="bold"
        android:layout_below="@+id/txtvWSAppName"
        />


    <TextView
        android:id="@+id/txtVwHosts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:gravity="bottom"
        android:text="000 hosts"
        android:textSize="15dp"
        android:textColor="@color/colorDarkPink"
        android:background="@color/colorIndigo"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/txtVwCPU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:gravity="bottom"
        android:text="000 cpu"
        android:textSize="15dp"
        android:textColor="@color/colorDarkGreen2"
        android:background="@color/colorIndigo"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtVwHosts"
        />
    <TextView
        android:id="@+id/txtVwStorage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:gravity="bottom"
        android:text="0000 GB Storag"
        android:textSize="15dp"
        android:textColor="@color/colorLime"
        android:background="@color/colorIndigo"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtVwCPU"
        />
</RelativeLayout>



