<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="activities.android.theopentutorials.com.cloudspace.DivtoAppActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vwid_jobstatus_msg1"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:paddingBottom="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vwid_jobstatus_msg2"
            android:text="To see the results  click on the job id list below"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/vwid_jobstatus_msg1"
            android:layout_margin="5dp"
            android:paddingBottom="10dp"
            />

    </RelativeLayout>

    <ListView
        android:id="@+id/search_result_srv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0">

    </ListView>




</LinearLayout>

